<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zeus.mapper.MemberMapper">

	<!-- 회원 + 권한 매핑 -->
	<resultMap type="Member" id="memberMap">
		<id property="no" column="no" />
		<result property="id" column="id" />
		<result property="pw" column="pw" />
		<result property="name" column="name" />
		<result property="regDate" column="regdate" />
		<result property="modDate" column="moddate" />
		<collection property="authList" resultMap="authMap" />
	</resultMap>

	<resultMap type="MemberAuth" id="authMap">
		<result property="no" column="no" />
		<result property="auth" column="auth" />
	</resultMap>

	<!-- 회원 단건 조회 (권한 포함) -->
	<select id="read" resultMap="memberMap">
		SELECT m.no, m.id, m.pw, m.name,
		m.regdate, m.moddate, a.auth
		FROM mybatisMember m
		INNER JOIN
		mybatisMemberAuth a
		ON m.no = a.no
		WHERE m.no = #{no}
	</select>

	<!-- 회원 목록 -->
	<select id="list" resultType="Member">
		SELECT no, id, pw, name, regdate
		FROM mybatisMember
		ORDER BY regdate DESC
	</select>

	<!-- 회원 수정 -->
	<update id="update">
		UPDATE mybatisMember
		SET name = #{name}
		WHERE no =
		#{no}
	</update>

	<!-- 회원 삭제 -->
	<delete id="delete">
		DELETE FROM mybatisMember
		WHERE no = #{no}
	</delete>

	<!-- 권한 삭제 -->
	<delete id="deleteAuth">
		DELETE FROM mybatisMemberAuth
		WHERE no = #{no}
	</delete>

	<!-- 회원 등록 -->
	<insert id="create" parameterType="Member">

		<selectKey keyProperty="no" resultType="int" order="BEFORE">
			SELECT
			mybatisMember_seq.NEXTVAL FROM dual
		</selectKey>

		INSERT INTO mybatisMember (no, id, pw, name)
		VALUES (#{no}, #{id},
		#{pw}, #{name})

	</insert>

	<!-- 권한 등록 -->
	<insert id="createAuth">
		INSERT INTO mybatisMemberAuth (no, auth)
		VALUES
		(#{no}, #{auth})
	</insert>

</mapper>
